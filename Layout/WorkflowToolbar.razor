@code {
    [Parameter] public EventCallback<WorkflowTool> OnToolSelected { get; set; }
    
    private WorkflowTool SelectedTool { get; set; } = WorkflowTool.Trigger; // Default to workflow (3rd item)

    private async Task SelectTool(WorkflowTool tool)
    {
        SelectedTool = tool;
        await OnToolSelected.InvokeAsync(tool);
    }

        private async Task OnDragStart(DragEventArgs e, WorkflowNodeType nodeType)
    {
        try
        {
            await JSRuntime.InvokeVoidAsync("eval", $"window.dragNodeType = '{nodeType}';");
        }
        catch (Exception ex)
        {
            // Silent error handling
        }
    }



    private void LoadSample()
    {
        EventService.RequestLoadSample();
    }

    private void OpenSettings()
    {
        // Settings logic
    }

    private void ShowHelp()
    {
        // Help logic
    }
}

<style>
    .figma-sidebar {
        width: 60px;
        height: 100vh;
        background-color: #f9f9fb;
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 13px 10px 26px 10px;
        border-right: 1px solid #e7e8ec;
        position: relative;
    }

    .sidebar-top {
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 14px 0 17px 0;
        margin-bottom: 12px;
    }

    .project-avatar {
        width: 28px;
        height: 28px;
        background-color: #14bdf0;
        border-radius: 6px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .project-avatar span {
        font-family: 'Inter', sans-serif;
        font-weight: 500;
        font-size: 11px;
        line-height: 14px;
        color: #ffffff;
        text-align: center;
    }

    .sidebar-menu {
        display: flex;
        flex-direction: column;
        gap: 0;
        flex: 1;
    }

    .sidebar-item {
        width: 36px;
        height: 36px;
        border: none;
        background: transparent;
        border-radius: 6px;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        color: #6b7280;
        transition: all 0.2s ease;
        padding: 8px 10px;
        margin: 0;
    }

    .sidebar-item:hover {
        background-color: #f3f4f6;
    }

    .sidebar-item.active {
        background-color: #e7e8ec;
        color: #374151;
    }

    .sidebar-item svg {
        width: 20px;
        height: 20px;
        stroke-width: 1.67;
    }

    .sidebar-section-divider {
        width: 100%;
        height: 1px;
        background-color: #d8d9e0;
        margin: 8px 0;
    }

    .draggable-tool {
        width: 36px;
        height: 36px;
        border: none;
        background: transparent;
        border-radius: 6px;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: grab;
        transition: all 0.2s ease;
        padding: 8px 10px;
        margin: 0;
        position: relative;
    }

    .draggable-tool:hover {
        background-color: #f3f4f6;
        transform: scale(1.05);
    }

    .draggable-tool:active {
        cursor: grabbing;
        transform: scale(0.95);
    }

    .draggable-tool svg {
        width: 20px;
        height: 20px;
    }

    .draggable-tool.link-tool:hover {
        background-color: #fef3c7;
        border: 1px solid #f59e0b;
    }

    .draggable-tool.link-tool:active {
        background-color: #fcd34d;
    }

    .sidebar-bottom {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 12px;
        margin-top: auto;
    }

    .sidebar-divider {
        width: 100%;
        height: 1px;
        background-color: #d8d9e0;
        margin: 8px 0;
    }

    .user-avatar {
        width: 28px;
        height: 28px;
        border-radius: 14px;
        overflow: hidden;
    }

    .user-avatar img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .load-sample-btn {
        width: 32px;
        height: 32px;
        border: 1px solid #e5e7eb;
        background: #ffffff;
        border-radius: 6px;
        display: flex;
