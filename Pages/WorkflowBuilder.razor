@page "/"
@page "/workflow-builder"
@using global::WorkflowBuilder.Layout
@using global::WorkflowBuilder.Models
@layout WorkflowLayout

<PageTitle>Workflow Builder</PageTitle>

<div class="workflow-canvas">
    <div class="canvas-grid" @oncontextmenu="OnCanvasRightClick" @oncontextmenu:preventDefault="true">
        <!-- Canvas content will be rendered here -->
        <div class="canvas-placeholder">
            <div class="placeholder-content">
                <i class="bi bi-diagram-3" style="font-size: 48px; color: #dee2e6;"></i>
                <h3>Start Building Your Workflow</h3>
                <p>Select a tool from the sidebar to begin adding workflow components</p>
                <div class="quick-actions">
                    <button class="btn btn-outline-primary" @onclick="AddTriggerNode">
                        <i class="bi bi-lightning-fill"></i> Add Trigger
                    </button>
                    <button class="btn btn-outline-secondary" @onclick="AddActionNode">
                        <i class="bi bi-gear-fill"></i> Add Action
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private WorkflowTool SelectedTool { get; set; } = WorkflowTool.Select;

    protected override void OnInitialized()
    {
        // Initialize workflow canvas
    }

    private void OnCanvasRightClick(MouseEventArgs e)
    {
        // Handle right-click context menu
    }

    private void AddTriggerNode()
    {
        // Add trigger node logic
    }

    private void AddActionNode()
    {
        // Add action node logic
    }

    private void OnToolSelected(WorkflowTool tool)
    {
        SelectedTool = tool;
        StateHasChanged();
    }
}

<style>
    .workflow-canvas {
        width: 100%;
        height: 100%;
        position: relative;
        overflow: auto;
        background-color: #ffffff;
    }

    .canvas-grid {
        width: 100%;
        height: 100%;
        background-image: 
            radial-gradient(circle, #e9ecef 1px, transparent 1px);
        background-size: 20px 20px;
        background-position: 0 0;
        position: relative;
        min-height: 100vh;
    }

    .canvas-placeholder {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        text-align: center;
        color: #6c757d;
    }

    .placeholder-content h3 {
        margin: 16px 0 8px 0;
        font-weight: 600;
        color: #495057;
    }

    .placeholder-content p {
        margin: 0 0 24px 0;
        font-size: 14px;
    }

    .quick-actions {
        display: flex;
        gap: 12px;
        justify-content: center;
    }

    .quick-actions .btn {
        display: flex;
        align-items: center;
        gap: 8px;
        padding: 8px 16px;
        border-radius: 6px;
        font-size: 14px;
        transition: all 0.2s ease;
    }

    .btn-outline-primary {
        border: 1px solid #007bff;
        color: #007bff;
        background: transparent;
    }

    .btn-outline-primary:hover {
        background-color: #007bff;
        color: white;
    }

    .btn-outline-secondary {
        border: 1px solid #6c757d;
        color: #6c757d;
        background: transparent;
    }

    .btn-outline-secondary:hover {
        background-color: #6c757d;
        color: white;
    }
</style> 